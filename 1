local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/NHMdz/BloxFruit/refs/heads/main/RedzLib.lua.txt"))()

local Window = redzlib:MakeWindow({
  Title = " ",
  SubTitle = " ",
  SaveFolder = "Redz Config"
})

print("反挂机")
Start = tick()
		local vu = game:GetService("VirtualUser")
		game:GetService("Players").LocalPlayer.Idled:connect(function()
		   vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
		   wait(1)
		   vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
		end)

Window:AddMinimizeButton({
  Button = { Image = redzlib:GetIcon("czl"), BackgroundTransparency = 0,Size = UDim2.fromOffset(60, 60), },
  Corner = { CornerRadius = UDim.new(0, 10) }
})

local Tab = Window:MakeTab({" ", "cool"})

_G.autofarm = true

function autobr()
	while _G.autobr == true do
	wait()
					local args = {
    [1] = "rep"
}

game:GetService("Players").LocalPlayer.muscleEvent:FireServer(unpack(args))
	end
end	

Tab:AddToggle({
  Name = "自动锻炼",  
  Default = false,
  Callback = function(Value)
    _G.autobr = Value
        autobr()
  end
})